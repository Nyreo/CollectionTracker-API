{
  "default": {
    "version": "1",
    "name": "Collection Tracker API",
    "desc": "a simple API for providing controlling information on packages",
    "links": [
      {
        "name": "accounts",
        "desc": "controls the acccounts collection",
        "href": "/accounts"
      },
      {
        "name": "packages",
        "desc": "controls the packages collection",
        "href": "/packages"
      }
    ],
    "allows": "GET"
  },
  "accounts": {
    "name": "accounts",
    "desc": "user accounts",
    "schema": {
      "username": "string",
      "password": "string",
      "userType": "string"
    },
    "allows": "GET, POST"
  },
  "packages": {
    "name": "packages",
    "desc": "all requested packages",
    "schema": {
      "_id": {
        "pseudo": "trackingNumber",
        "type:": "string"
      },
      "courier": "string",
      "status": "string",
      "addTime": "number",
      "username": "string",
      "address": "string",
      "recpName": "string",
      "weight": "number",
      "destPostcode": "string",
      "sendPostcode": "string"
    },
    "links": [
      {
        "name": "<username>",
        "desc": "gets all packages for a specific user",
        "href": "/<username>"
      }
    ],
    "queries": [
      {
        "name": "trackingnumber",
        "desc": "queries the collection based on the tracking number"
      }
    ],
    "allows": "GET, POST, PATCH"
  },
  "packages/<username>": {
    "name": "packages/<username>",
    "desc": "all packages for a specific user",
    "schema": {
      "_id": {
        "pseudo": "trackingNumber",
        "type:": "string"
      },
      "courier": "string",
      "status": "string",
      "addTime": "number",
      "username": "string",
      "address": "string",
      "recpName": "string",
      "weight": "number",
      "destPostcode": "string",
      "sendPostcode": "string"
    },
    "queries": [
      {
        "name": "courier",
        "desc": "determines whether or not the requesting user is a courier"
      }
    ],
    "allows": "GET"
  }
}
