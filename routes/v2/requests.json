{
  "default" : {
    "version": "2",
    "name": "Collection Tracker API",
    "desc": "a simple API for providing controlling information on packages",
    "links": [
      {
        "name": "accounts",
        "desc": "controls the acccounts collection",
        "href": "/accounts"
      },
      {
        "name": "packages",
        "desc": "controls the packages collection",
        "href": "/packages"
      }
    ],
    "allows": "GET"
  },
  "accounts" : {
    "name": "accounts",
    "desc": "user accounts",
    "request schema": {
      "username": "string",
      "password": "string"
    },
    "response schema": {
      "username": "string",
      "password": "string",
      "userType": "string"
    },
    "allows": "GET, POST"
  },
  "packages" : {
    "name": "packages",
    "desc": "all requested packages",
    "response schema": {
      "_id" : {
        "pseudo": "trackingNumber",
        "type:" : "string"
      },
      "courier?" : "string",
      "status" : "string",
      "date" : "number",
      "username" : "string",
      "address" : "string",
      "recpName" : "string",
      "weight" : "number",
      "destPostcode" : "string",
      "sendPostcode" : "string",
      "deliveryDetails": {
        "time": "number",
        "lat" : "number",
        "lng" : "number",
        "handedTo" : "string"
      }
    },
    "links": [
      {
        "name": ":username",
        "desc": "gets all packages for a specific user",
        "href": "/<username>"
      },
      {
        "name": "signatures",
        "desc": "handles signatures collection",
        "href": "/signatures"
      }
    ],
    "queries": [
      {
        "name": "trackingnumber",
        "desc": "filters packages collection by tracking number",
        "type": "string",
        "required length" : 24
      }
    ],
    "allows": "GET, POST"
  },
  "packages/<username>": {
    "name": "packages/<username>",
    "desc": "all packages for a specific user",
    "request schema": {
      "username": "string"
    },
    "response schema": {
      "_id" : {
        "pseudo": "trackingNumber",
        "type:" : "string"
      },
      "courier?" : "string",
      "status" : "string",
      "date" : "number",
      "username" : "string",
      "address" : "string",
      "recpName" : "string",
      "weight" : "number",
      "destPostcode" : "string",
      "sendPostcode" : "string",
      "deliveryDetails?": {
        "time": "number",
        "lat" : "number",
        "lng" : "number",
        "handedTo" : "string"
      }
    },
    "queries": [
      {
        "name": "courier",
        "desc": "determines whether or not the requesting user is a courier",
        "type": "boolean"
      }
    ],
    "allows": "GET"
  },
  "packages/signatures": {
    "name" : "packages/signatures",
    "desc" : "method for uploading images to the signature collection",
    "request_schema": {
      "signature64" : "string",
      "trackingNumber": "string"
    },
    "allows": "POST"
  }
}